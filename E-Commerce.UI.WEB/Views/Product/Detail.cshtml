<div class="notification-bottom-right" style="   display: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
        padding: 20px;
        background-color: #28a745;
        color: white;
        border-radius: 5px;
        z-index: 9999;"></div>

<!-- Your existing JavaScript and jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.addBasket').click(function (e) {
            e.preventDefault();

            var productId = $(this).data('productid');
            var quantity = $(this).data('quantity');

            $.ajax({
                url: '/Basket/AddItemToCart', // URL to your controller action method
                type: 'POST',
                data: { productID: productId, quantity: quantity },
                success: function (response) {
                    var mesaj = "Add to cart successful"; // Metin girişinden mesajı al
                    $(".notification-bottom-right").text(mesaj).fadeIn().delay(2000).fadeOut(); // Mesajı göster, 2 saniye sonra gizle
                },
                error: function (xhr, status, error) {
                    // Handle errors if any
                    console.error(xhr.responseText);
                }
            });
        });
    });

    // Sepete eklenecek ürün adetini değiştirir
    document.addEventListener('DOMContentLoaded', function () {
        const quantityWrapper = document.querySelector('.quantity-wrapper');
        const numberSpan = document.querySelector('.number');

        quantityWrapper.addEventListener('click', function (event) {
            const target = event.target;

            if (target.classList.contains('minus')) {
                // Eksi işaretine tıklandığında
                let currentNumber = parseInt(numberSpan.textContent);
                if (currentNumber > 1) {
                    currentNumber--;
                    numberSpan.textContent = currentNumber;
                    updateQuantityAttribute(currentNumber);
                }
            } else if (target.classList.contains('plus')) {
                // Artı işaretine tıklandığında
                let currentNumber = parseInt(numberSpan.textContent);
                currentNumber++;
                numberSpan.textContent = currentNumber;
                updateQuantityAttribute(currentNumber);
            }
        });

        function updateQuantityAttribute(quantity) {
            const addBasketButton = document.querySelector('.addBasket');
            addBasketButton.setAttribute('data-quantity', quantity);
        }
    });

</script>