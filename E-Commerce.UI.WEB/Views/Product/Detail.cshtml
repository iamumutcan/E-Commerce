                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="product-info-content" data-aos="fade-left">
                        <h5>@Model.Name</h5>
                        <div class="price">
                            @{if (Model.Discount > 0)
                                {
                                    <span class="price-cut">@Model.TotalPriceWithoutDiscount </span>
                                    <span class="new-price">🪙 @Model.TotalPrice</span>
                                }
                                else
                                {<span class="new-price">🪙 @Model.TotalPrice</span>
                            }
                            }

                        </div>
                        <p class="content-paragraph">@Model.Description</span></p>
                        <hr>

                        <div class="product-quantity">
                            <form>
                                <div class="quantity-wrapper">
                                    <div class="quantity">
                                        <span class="minus">
                                            -
                                        </span>
                                        <span class="number">1</span>
                                        <span class="plus">
                                            +
                                        </span>
                                    </div>

                                </div>

                                @{if (Islogin)
                                    {
                                        <button class="shop-btn addBasket" data-productID="@Model.ID" data-quantity="1">
