<div class="notification-bottom-right" style="   display: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
        padding: 20px;
        background-color: #28a745;
        color: white;
        border-radius: 5px;
        z-index: 9999;"></div>

<!-- Your existing JavaScript and jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.addBasket').click(function (e) {
            e.preventDefault();

            var productId = $(this).data('productid');
            var quantity = $(this).data('quantity');

            $.ajax({
                url: '/Basket/AddItemToCart', // URL to your controller action method
                type: 'POST',
                data: { productID: productId, quantity: quantity },
                success: function (response) {
                    var mesaj = "Add to cart successful"; // Metin girişinden mesajı al
                    $(".notification-bottom-right").text(mesaj).fadeIn().delay(2000).fadeOut(); // Mesajı göster, 2 saniye sonra gizle
                },
                error: function (xhr, status, error) {
                    // Handle errors if any
                    console.error(xhr.responseText);
                }
            });
        });
    });
</script>