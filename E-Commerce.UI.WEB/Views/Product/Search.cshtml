
@model List<E_Commerce.Core.Model.Entity.Product>
@using System.Text.RegularExpressions;

@{
    ViewBag.Title = "Index";
    var Islogin = (bool)ViewBag.IsLogin;

}

<h2></h2>


<section class="product arrival">
    <div class="container">
        <div class="section-title">
            <h5>Products:</h5>
        </div>
        <div class="arrival-section">
            <div class="row g-5">
                @{
                    foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="product-wrapper" data-aos="fade-up">
                                <div class="product-img">
                                    <img src="@item.ImageUrl" alt="product-img">
                                </div>
                                <div class="product-info">
                                    <div class="product-description">
                                        <a href="/product/@Regex.Replace(item.Name.ToLower(), @"[^a-z0-9]", "-")/@item.ID" class="product-details">
                                            @if (item.Name.Length > 60)
                                            {@item.Name.Substring(0, 60) <span>... </span>}
                                        else
                                        {@item.Name}
                                        </a>
                                        <div class="price">
                                            @{if (item.Discount > 0)
                                                {
                                                    <span class="price-cut">@item.TotalPriceWithoutDiscount </span>
                                                    <span class="new-price">🪙 @item.TotalPrice</span>
                                                }
                                                else
                                                {<span class="new-price">🪙 @item.TotalPrice</span>
                                            }
                                            }

                                        </div>
                                    </div>
                                </div>
                                <div class="product-cart-btn">
                                    @{if (Islogin)
                                        {
                                            <button class="product-btn addBasket" data-productID="@item.ID" data-quantity="1">Add To Cart</button>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

