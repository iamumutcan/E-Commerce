@using User = E_Commerce.Core.Model.Entity.User
@model E_Commerce.Core.Model.Entity.User


@{

}

<section class="user-profile footer-padding">
    <div class="container">
        <div class="user-profile-section">

            <div class="user-dashboard">

                @Html.Partial("_UserDashboardMenu")
                <div class="tab-content nav-content" id="v-pills-tabContent" style="flex: 1 0%;">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                         aria-labelledby="v-pills-home-tab" tabindex="0">
                        <div class="user-profile">
                            <div class="user-title">
                                <p class="paragraph">Hello, @((ViewBag.User as User).Name)</p>
                                <h5 class="heading">Welcome to your Profile </h5>
                            </div>
                            <div class="profile-section">
                                <div class="row">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-lg-12">
                                            <div class="account-section">
                                                <div class="review-form">
                                                    <div class="account-inner-form">
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                        @Html.HiddenFor(model => model.ID)
                                                        @Html.HiddenFor(model => model.CreatedDate)
                                                        @Html.HiddenFor(model => model.CreateUserId)
                                                        @Html.HiddenFor(model => model.IsActive)
                                                        @Html.HiddenFor(model => model.IsDelete)
                                                        @Html.HiddenFor(model => model.IsAdmin)
                                                        @Html.HiddenFor(model => model.Password)
                                                        @Html.HiddenFor(model => model.PrivateKey)
                                                        @Html.HiddenFor(model => model.WalletAddress)
                                                        <div class="review-form-name">

                                                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
                                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="review-form-name">
                                                            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "form-label" })
                                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="account-inner-form">
                                                        <div class="review-form-name">
                                                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "user@gmail.com", type = "email" } })
                                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="review-form-name">
                                                            @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "form-label" })
                                                            @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", placeholder = "+880388**0899", type = "tel" } })
                                                            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="account-inner-form">
                                                        <div class="review-form-name">
                                                            @Html.LabelFor(model => model.TCKN, htmlAttributes: new { @class = "form-label" })
                                                            @Html.EditorFor(model => model.TCKN, new { htmlAttributes = new { @class = "form-control", placeholder = "1111111111", type = "number" } })
                                                            @Html.ValidationMessageFor(model => model.TCKN, "", new { @class = "text-danger" })
                                                        </div>
                                                       
                                                    </div>
                                                    <div class="submit-btn">
                                                        <div class="row">
                                                            <div class="col-4"><a href="/AccountUpdate" style="width: 150px; height:50px;" class="shop-btn cancel-btn ">Cancel</a></div>
                                                            <div class="col-4"><input type="submit" style="width: 150px; height:50px;" value="Save" class="shop-btn update-btn" /></div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
